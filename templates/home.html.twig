{% extends 'base.html.twig' %}

{% block body %}
    <div class="col-12 mx-auto mt-5 row">
        {% for categorie in categories %}
            <div class="col-8 cat-border mx-auto text-white mt-2">
                <a href="{{ path('cat',{id:categorie.id}) }}" class="text-white">
                    <i class="{{ categorie.icon }} text-white"></i> - {{ categorie.name }}
                </a>
            </div>
            {% for subject in categorie.getSubjecs() %}
                <div class="col-8 row mx-auto text-white subj-border">
                    <div class="col-6">
                        <a href="{{ path('sub',{id:subject.id})}}">
                        {{ subject.name }}
                        </a>
                    </div>
                    <div class="col-2">
                        {{ subject.createAt|date('d/m/Y') }}
                    </div>
                    <div class="col-2">
                        {{ subject.auhor.username }}
                    </div>

                </div>
            {% endfor %}
        {% endfor %}
    </div>
{% endblock %}